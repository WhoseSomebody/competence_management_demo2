= form_for @profession do |f|
  - if @profession.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profession.errors.count, "error")} prohibited this profession from being saved:"
      %ul
        - @profession.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :min_level_of_compet_test
    = f.number_field :min_level_of_compet_test
  .field
    = f.label :profession_name
    = f.text_field :profession_name
  .field
    = f.label :qualification_name
    = f.text_field :qualification_name
  .field
    = f.label :level
    = f.number_field :level
  .actions
    = f.submit 'Save'
